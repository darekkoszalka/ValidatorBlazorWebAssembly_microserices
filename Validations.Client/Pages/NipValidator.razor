@page "/nipvalidator"
@using Validations.Client.StaticData

<PageTitle>@Title</PageTitle>
<Breadcrumb Title="@Title" />
<div class="container mt-3">
    <div class="row">
        <div class="col-sm-6">
            @if (EditFormIsVisible)
            {
                <EditForm Model="@NipTaskModel"  OnValidSubmit="CheckNipIsValid">
                    <DataAnnotationsValidator />
                    <div class="form-group">
                        <label for="pesel" class="form-label text-secondary">Wpisz numer Nip</label>
                        <InputText id="pesel" @bind-Value="NipTaskModel.Nip" class="form-control" />
                        <ValidationMessage For="()=>NipTaskModel.Nip" />
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Sprawdź</button>
                    </div>
                </EditForm>
            }
        </div>
        <div class="col-sm-6">
            @if (NipVM != null)
            {
                <NipViewComponent NipVM="@NipVM" />
            }
        </div>
    </div>
</div>


